      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.4</Mass>
      <StuffEffectMultiplierArmor>0.21</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.26</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.5</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <slaveApparel>true</slaveApparel>
      <bodyPartGroups>
		<li>Shoulders</li>
		<li>Torso</li>
		<li>Legs</li>
		<li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/SCR_ClassDJumpsuit/SCR_ClassDJumpsuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
	  <defaultOutfitTags>
        <li>Slave</li>
      </defaultOutfitTags>
	  <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
	  <tags>
		<li>DClassSlave</li>
	  </tags>
    </apparel>

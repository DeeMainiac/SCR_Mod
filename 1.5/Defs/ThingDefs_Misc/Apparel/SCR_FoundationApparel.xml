<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="SCR_ApparelNoColorBase">       
		<defName>SCR_Glasses</defName>
		<label>glasses</label>
		<description>A pair of spectacles perfect for improving vision and research skills.</description>
		<graphicData>
		  <texPath>Things/Item/Apparel/Foundation/Glasses/SCR_glasses_south</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.001</Mass>
			<StuffEffectMultiplierInsulation_Cold>0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<EquipDelay>0.05</EquipDelay>
		</statBases>
		<generateCommonality>0.4</generateCommonality>
		<equippedStatOffsets>
			<ResearchSpeed>0.1</ResearchSpeed>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
			<GlobalLearningFactor>0.07</GlobalLearningFactor>
		</equippedStatOffsets>
		<recipeMaker>
			  <researchPrerequisites>
				<li>ComplexClothing</li>
				<li MayRequire="mlie.rimworldwesternizationproject">RWP_Optometry</li>
			  </researchPrerequisites>
			  <displayPriority>208</displayPriority>
		</recipeMaker>
		<!-- SHUT MY MOUTH AND SLAP MY GRANDMA, IT NOW ACCCEPTS STUFF!! -->
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
			<!-- Mod Stuff -->
			<li MayRequire="dubwise.rimefeller">Plastic</li>
			<li MayRequire="dubwise.rimefeller">Composite</li>
			<li MayRequire="sarg.alphabiomes">AB_Exotic</li>
			<li MayRequire="sarg.alphabiomes">AB_ExoticMetals</li>
			<li MayRequire="biomesteam.biomescore">BMT_ChitinStuff</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<apparel>
		  <countsAsClothingForNudity>false</countsAsClothingForNudity>
		  <developmentalStageFilter>Child, Adult</developmentalStageFilter>
		  <bodyPartGroups>
			<li>Eyes</li>
		  </bodyPartGroups>
		  <wornGraphicPath>Things/Item/Apparel/Foundation/Glasses/SCR_glasses</wornGraphicPath>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>Glasses</li>
			<li>SCP_NonAnomalous_Clothing</li>
			<li>IndustrialBasic</li>
			<li>Outlander</li>
			<li>OniWear</li>
			<li>Usa</li>
			<li>RWPGentlemanWear</li>
			<li>Scientist</li>
		  </tags>
		  <forceEyesVisibleForRotations>
			<li>1</li>
			<li>2</li>
			<li>3</li>
		  </forceEyesVisibleForRotations>
		</apparel>
	  </ThingDef>



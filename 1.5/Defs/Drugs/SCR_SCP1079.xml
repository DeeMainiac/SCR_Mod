<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="DrugBase">
    <defName>SCR_SCP1079R</defName>
    <label>SCP-1079</label>
    <description>A piece of Wondertainment's Bubblebath Bonbons. It causes the consumer's blood to boil and escape from their pores. Eating several in short succession can be fatal. It fulfills the need for recreation, but it is not very nutritious.</description>
		<modExtensions>
			<li Class="SecureContainRimworld.CProceduresExtension">
				<classRating>
					<li>SCR_CSafe</li>
					<li>SCR_DVlam</li>
					<li>SCR_RNotice</li>
				</classRating>
				<containmentTier>0</containmentTier>
			</li>
		</modExtensions>
	<graphicData>
      <texPath>Things/Item/Resource/SCR_SCP1079B</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.88</drawSize>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>10</MarketValue>
      <Mass>0.075</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <thingCategories>
      <li>Foods</li>
	  <li>SCP</li>
    </thingCategories>
    <ingestible>
      <preferability>DesperateOnly</preferability>
      <foodType>Processed</foodType>
      <joy>0.05</joy>
      <joyKind>Gluttonous</joyKind>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <defaultNumToIngestAtOnce>1</defaultNumToIngestAtOnce>
      <ingestSound>Meal_Eat</ingestSound>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <allowedArchonexusCount>80</allowedArchonexusCount>
    <possessionCount>10</possessionCount>
	<comps>
	<!--      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>consume a SCP-1079 candy</useLabel>
        <useDuration>100</useDuration>
      </li> -->
      <li Class="CompProperties_UseEffect">
        <compClass>SecureContainRimworld.CompUseEffect_UseSCP1079</compClass>
      </li>
      <li Class="CompProperties_UseEffectPlaySound">
        <soundOnUsed>Ingest_Pill</soundOnUsed>
      </li>
<li Class="CompProperties_UseEffectDestroySelf" />
    </comps>
	
  </ThingDef>


</Defs>